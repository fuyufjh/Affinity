<!DOCTYPE html>
<html>
<head>
    {{!-- Document Settings --}}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{!-- Page Meta --}}
    <title>{{meta_title}}</title>

    {{!-- Mobile Meta --}}
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{!-- Styles'n'Scripts --}}
    <link rel="stylesheet" type="text/css" href="{{asset "affinity.min.css"}}" />

    {{!-- Ghost outputs important style and meta data with this tag --}}
    {{ghost_head}}
</head>
<body class="{{body_class}}">
    <section class="section">
      <section class="section-sidebar">
        <div class="sidebar-header">
          <a href="{{@blog.url}}" class="sidebar-header-logo">
            <img class="logo" alt="{{@blog.title}}" src="{{@blog.logo}}" />
          </a>
          <p>{{@blog.description}}</p>
          {{!-- The blog navigation links --}}
          {{navigation}}
        </div>
        <div class="sidebar-footer"></div>
      </section>

      <section class="section-content" id="content" role="main">
        {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
        {{{body}}}
      </section>

      <section class="section-footer">
        <p><strong><a href="{{@blog.url}}">{{@blog.title}}</a></strong> &copy; {{date format="YYYY"}} All Rights Reserved.</p>
        <p>Published with <strong><a href="https://ghost.org/" title="Ghost">Ghost</a></strong>.</p>
		<p>Ghost Theme <a href="https://sb.sb/ghost-theme-affinity/" title="Ghost Theme Affinity">Affinity</a> with <span class="text-red">&hearts;</span></p>
      </section>
    </section>

    {{!-- jQuery needs to come before `{{ghost_foot}}` so that jQuery can be used in code injection --}}
    <script type="text/javascript" src="{{asset "affinity.min.js"}}"></script>

    <!-- MathJax -->
    <script type="text/x-mathjax-config">
        MathJax.Hub.Config({tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}});
    </script>
    <script type="text/javascript" async src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.1/MathJax.js?config=TeX-AMS_CHTML"></script>

    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{ghost_foot}}
</body>
</html>
